<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MensagemCozinhaActivity">

    <!-- Campo de Mensagem -->
    <include
        android:id="@+id/include"
        layout="@layout/activity_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>

    <!-- Botão de Enviar Mensagem de Observação Pedido -->

    <Button
        android:id="@+id/mensagem_cozinha"
        android:layout_width="186dp"
        android:layout_height="69dp"
        android:layout_marginBottom="304dp"
        android:background="#5FB404"
        android:onClick="onEnviarMensagemWhatsapp"
        android:text="Enviar Observação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editMensagem"
        android:layout_width="412dp"
        android:layout_height="174dp"
        android:layout_marginTop="285dp"
        android:ems="10"
        android:hint="@string/hint"
        app:layout_constraintBottom_toTopOf="@+id/mensagem_cozinha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>