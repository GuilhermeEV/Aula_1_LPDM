<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MensagemCozinhaActivity">

    <!-- Campo de Mensagem -->
    <EditText
        android:id="@+id/editMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/hint" />

    <!-- Botão de Enviar Mensagem de Observação Pedido -->
    <Button
        android:id="@+id/mensagem_cozinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5FB404"
        android:onClick="onEnviarMensagemWhatsapp"
        android:layout_marginTop="20dp"
        android:text="Enviar Observação" />

</LinearLayout>